<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F8E5F"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/brandingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/cardContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="#26FFFFFF">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/app_logo_foreground"
                app:tint="#FFFFFF" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.8"
            android:text="@string/tagline"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_bottom_sheet"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-bold"
                android:text="@string/start_your_garden"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:text="@string/full_name"
                android:textColor="#9CA3AF"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/bg_input_field"
                android:drawableStart="@drawable/outline_person_24"
                android:drawablePadding="12dp"
                android:drawableTint="#9CA3AF"
                android:hint="@string/username_hint"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/labelName" />

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:text="@string/email_address"
                android:textColor="#9CA3AF"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etName" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/bg_input_field"
                android:drawableStart="@drawable/outline_email_24"
                android:drawablePadding="12dp"
                android:drawableTint="#9CA3AF"
                android:hint="@string/user_email_hint"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/labelEmail" />

            <TextView
                android:id="@+id/labelPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:text="@string/password"
                android:textColor="#9CA3AF"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEmail" />

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/bg_input_field"
                android:drawableStart="@drawable/outline_lock_24"
                android:drawablePadding="12dp"
                android:drawableTint="#9CA3AF"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/labelPass" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:checkedButton="@id/btnBeginner"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:layout_constraintTop_toBottomOf="@+id/etPass">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBeginner"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/beginner"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-bold"

                    android:layout_marginEnd="8dp"

                    android:textColor="@color/selector_toggle_text"
                    app:backgroundTint="@color/selector_toggle_bg"
                    app:strokeColor="@color/selector_toggle_stroke"
                    app:strokeWidth="1.5dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMentor"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/mentor"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-bold"

                    android:layout_marginStart="8dp"

                    android:textColor="@color/selector_toggle_text"
                    app:backgroundTint="@color/selector_toggle_bg"
                    app:strokeColor="@color/selector_toggle_stroke"
                    app:strokeWidth="1.5dp"
                    app:cornerRadius="12dp" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#0F8E5F"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-bold"
                android:text="@string/create_account"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/toggleGroupUserType" />

            <LinearLayout
                android:id="@+id/dividerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btnCreate">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E5E7EB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="@string/or_continue_with"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E5E7EB" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="@string/sign_in_with_google"
                android:textAllCaps="false"
                android:textColor="#1F2937"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:icon="@drawable/google_icon"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:layout_constraintTop_toBottomOf="@+id/dividerLayout"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/already_have_an_account_sign_in"
                android:textColor="@color/green_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>